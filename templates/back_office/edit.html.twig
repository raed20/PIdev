{% extends 'back_office/base_back.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('styles_back') }}
	{{ encore_entry_link_tags('styles_backopp') }}
	{{ encore_entry_link_tags('styles_backaddopp') }}
{% endblock %}
{% block body %}
<section class="section market " aria-label="market update" data-section>
		<div class="container">
			<div class="title-wrapper">
				<h2 class="h2 section-title">Modifier une opportunit√©</h2>

			</div>
		{{ form_start(f, {'attr': {'novalidate': 'novalidate'}}) }}
		<table class="form-table">
			<tr>
				<td>{{ form_label(f.name) }}</td>
				<td>
					{{ form_widget(f.name, {'attr': {'class': 'form-input'}}) }}
				</td>
				<td>{{ form_errors(f.name) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(f.lastprice) }}</td>
				<td>
					{{ form_widget(f.lastprice, {'attr': {'class': 'form-input'}}) }}
				</td>
				<td>{{ form_errors(f.lastprice) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(f.yesterdaychange) }}</td>
				<td>
					{{ form_widget(f.yesterdaychange, {'attr': {'class': 'form-input'}}) }}
				</td>
				<td>{{ form_errors(f.yesterdaychange) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(f.marketcap) }}</td>
				<td>
					{{ form_widget(f.marketcap, {'attr': {'class': 'form-input'}}) }}
				</td>
				<td>{{ form_errors(f.marketcap) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(f.description) }}</td>
				<td>
					{{ form_widget(f.description, {'attr': {'class': 'form-input'}}) }}
				</td>
				<td>{{ form_errors(f.description) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(f.prix) }}</td>
				<td>
					{{ form_widget(f.prix, {'attr': {'class': 'form-input'}}) }}
				</td>
				<td>{{ form_errors(f.prix) }}</td>
			</tr>
		</table>

		<button type="submit" class="edit-button">Edit</button>
		<!-- Add class to the button -->

		{{ form_end(f) }}
	</div>
{% endblock %}
