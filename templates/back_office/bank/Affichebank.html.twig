{% block stylesheets %}
    
	{{ encore_entry_link_tags('styles_back') }}
    {{ encore_entry_link_tags('styleaffiche') }}
{% endblock %}

{% block body %}

	<section class="section market " aria-label="market update" data-section>
		<div class="container">
			<div class="title-wrapper">
				<h2 class="h2 section-title">Liste des banques</h2>
				<h2><a href="{{ path('app_afficherlisteloanAdmin')}}">Liste des prÃªts</a></h2>

				<a href="{{path('app_AddBank')}}"><i class="fas fa-plus add_btn"></i></a>

			</div>
			<div class="market-tab">
				<table class="market-table">
					<thead class="table-head">
						<tr class="table-row table-title">
							<th class="table-heading table-text" scope="col">#</th>
                            <th class="table-heading table-text" scope="col"></th>
							<th class="table-heading table-text" scope="col">Nom</th>
                            <th class="table-heading table-text" scope="col">Logo</th>

							<th class="table-heading table-text" scope="col">Adresse</th>
