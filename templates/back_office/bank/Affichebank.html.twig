							<th class="table-heading table-text" scope="col"></th>
							<th class="table-heading table-text"></th>
						</tr>
					</thead>
					<tbody class="table-body">
						{% for a in Bank %}
							<tr class="table-row">

								<td class="table-data">
									<div class="wrapper">
										<h3>
											<a href="{{ path('get_loans', {'id': a.id}) }}" class="coin-name table-text">{{ a.id }}</a>
										</h3>
									</td>
								</td>
								<td class="table-data last-price table-text"></td>
									<td>{{a.Nom}}</td>
                                <td class="column4"><img src="{{ asset('uploads/bank/'~ a.logo) }}" width="50px"></img></td>
								<td>{{a.adresse}}</td>
								<td class="table-data last-update green table-text">
                                <td class="table-data market-cap table-text"></td>
								<td class="table-text"></td>
								<td class="table-data">
									<button class="btn btn-outline">
										<a href="{{ path('app_editbank', {'id': a.id}) }}">edit</a>
									</button>
								</td>
								<td class="table-data">
									<button class="btn btn-outline">
										<a href="{{ path('app_deletebank', {'id': a.id}) }}">delete</a>
									</button>
								</td>

							{% endfor %}
						</tbody>
					</tbody>
				</table>
			</td>
		</tr>
	</div>
</tbody></div></section></article>{% endblock %}
