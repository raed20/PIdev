<!DOCTYPE html>
<html lang="en">
<head>
  <title>Product List</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>  
</head>
<body>

  <div class="container mt-3">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h2>Product List</h2>
        <br>
        <br>
        <div class="mb-3 d-flex justify-content-between align-items-center">
          <form action="{{ path('app_product_all') }}" method="GET" class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search by name" aria-label="Search" name="search" style="width: 600px;">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
          <div>
            <a href="{{ path('app_product_add') }}" class="btn btn-success">Add product</a>
          </div>
        </div>          
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Reference</th>
              <th>Name</th>
              <th>Price</th>
              <th>Description</th>
              <th>Category</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {% for product in products %}
            <tr>
              <td>{{ product.id }}</td>
              <td>{{ product.name }}</td>
              <td>{{ product.price }}</td>
              <td>{{ product.Description }}</td>
              <td>{{ product.Category }}</td>
              <td>
                <div style="display: flex;">
                  <form action="{{ path('app_edit_product', {'ref': product.id}) }}" method="post" style="margin-right: 5px;">
                    <button type="submit" class="btn btn-primary">Edit</button>
                  </form>
                  <form action="{{ path('app_delete_product', {'ref': product.id}) }}" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
