{% if form %}
    {{ form_start(form, {'attr': {'class': 'flex items-center justify-center mb-4 d-flex'}}) }}
    <div class="input-group" style="width: 600px;">
        {{ form_widget(form.prod, {'attr': {'class': 'form-control', 'placeholder': 'Search by name', 'aria-label': 'Search'}}) }}
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
    {{ form_errors(form.prod) }}
    {{ form_end(form) }}
{% endif %}
