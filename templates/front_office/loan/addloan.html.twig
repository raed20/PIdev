{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('styleformpret') }}
{% endblock %}

{% block body %}
<div class="container-form">
    <div class="form-container">
        <img class="pret_logo" src="{{asset('images/pret_logo.png')}}" alt="">
        <h2>Loan Application Form</h2>
        {{ form_start(loan, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label for="full-name"></label>
                {{ form_row(loan.fname) }}
            </div>

            <div class="form-group">
                <label for="email"></label>
                {{ form_row(loan.email) }}
            </div>

            <div class="form-group">
                <label for="phone"></label>
                {{ form_row(loan.phonenum) }}
            </div>

            <div class="form-group">
                <label for="amount"></label>
                {{ form_row(loan.amount) }}
            </div>

            <div class="form-group">
                <label for="duration"></label>
                {{ form_row(loan.duration) }}
            </div>
            
        {{ form_end(loan) }}
    </div>
</div>
{% endblock %}

