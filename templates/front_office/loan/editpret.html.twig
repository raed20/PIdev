{% extends 'front_office/base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('styleformpret') }}
{% endblock %}

{% block body %}
<div class="container-form">
    <div class="form-container">
        <img class="pret_logo" src="{{asset('images/pret_logo.png')}}" alt="">
        <h2>Loan Application Form</h2>
        {{ form_start(loan, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label for="full-name"></label>
                {{ form_row(loan.fname) }}
            </div>

            <div class="form-group">
                <label for="email"></label>
                {{ form_row(loan.email) }}
            </div>

            <div class="form-group">
                <label for="phone"></label>
                {{ form_row(loan.phonenum) }}
            </div>

            <div class="form-group">
                <label for="amount"></label>
                {{ form_row(loan.amount) }}
            </div>

            <div class="form-group">
                <label for="duration"></label>
                {{ form_row(loan.duration) }}
            </div>
            
        {{ form_end(loan) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        {% for flashMessage in app.session.flashbag.get('success') %}
            Swal.fire({
                icon: 'success',
                title: '{{ flashMessage }}',
                showConfirmButton: true,
                timer: 2000,
                timerProgressBar: true,
                allowOutsideClick: false,
                allowEscapeKey: false
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '{{ path('app_afficherlisteloan') }}';
                }
            });
        {% endfor %}
    </script>
{% endblock %}

