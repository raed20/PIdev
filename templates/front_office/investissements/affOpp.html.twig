{% extends 'front_office/base_front.html.twig' %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('styles_invest_main_front') }}
{% endblock %}
{% block body %}


	<article>
		<!--Hero section-->
		<section class="section hero" aria-label="hero" data-section>
			<div class="container">
				<div class="hero-container">
					<h1 class="h1 hero-title">Invest in a secure future with ProSync.</h1>
					<p class="hero-text">Prosync is the premier and most secure platform for tracking and investing in stocks.</p>
					<a href="#" class="btn btn-primary ion-icon">Get started now</a>
				</div>
				<figure class="hero-banner">
					<img src="{{ asset('images/front_office/hero-banner.png') }}" width="570" height="448" alt="Hero Banner" class="w-100">
				</figure>
			</div>
		</section>
		<section class="section trend" aria-label="hero" data-section>
			<div class="container">
				<div class="trend-tab">
					<ul class="tab-nav">

						<li>
							<button class="tab-btn trenbtn">stock_type</button>
						</li>

						<li>
							<button class="tab-btn">Makersplace</button>
						</li>
					</ul>
					<ul class="tab-content">
						{% for a in opport|slice(0, 4) %}
							<li>
								<div class="trend-card ative">

									<div class="card-title-wrapper">
										<img src="{{ asset('images/front_office/coin-4.svg') }}" width="24" height="24" alt="bitcoin logo">

										<a href="#" class="card-title">{{ a.name }}
											<span class="span">USD</span>
										</a>
									</div>
									<data class="card-value" value="{{ a.prix }}">{{ a.prix }}USD</data>
									<div class="card-analytics">
										<data class="current-price" value="{{ a.marketcap }}">{{ a.marketcap }}</data>

										<div class="badge red">{{ a.yesterdaychange }}%</div>
									</div>

								{% endfor %}
							</li>
						</div>
					</li>
				</div>
			</li>
		</div>
	</section>
	<section class="section market" aria-label="market update" data-section>
		<div class="container">
			<div class="title-wrapper">
				<h2 class="h2 section-title">Market Update</h2>

				<a href="#" class="btn-link">See All Coins</a>
			</div>
			<div class="market-tab">
				<table class="market-table">
					<thead class="table-head">
						<tr class="table-row table-title">
							<th class="table-heading table-text"></th>
							<th class="table-heading table-text" scope="col">#</th>
							<th class="table-heading table-text" scope="col">Name</th>
							<th class="table-heading table-text" scope="col">Last Price</th>
							<th class="table-heading table-text" scope="col">24H %</th>
							<th class="table-heading table-text" scope="col">Market Cap</th>
							<th class="table-heading table-text" scope="col">Prix</th>
							<th class="table-heading table-text"></th>
						</tr>
					</thead>
					<tbody class="table-body">
						{% for a in opport|slice(0, 10) %}
							<tr class="table-row">
								<th class="table-data rank table-text" scope="row">{{ a.id }}</th>


								<td class="table-data">
									<div class="wrapper">
										<h3>
											<a href="#" class="coin-name table-text">{{ a.name }}<span class="span">{{ a.name }}</span>
											</a>
										</h3>
										<img src="{{ asset('images/front_office/coin-4.svg') }}" width="20" height="20" alt="Bitcoin logo" class="img">
									</td>
								</td>
								<td class="table-data last-price table-text">{{ a.lastprice }}</td>
								<td class="table-data last-update green table-text">{{ a.yesterdaychange }}%</td>
								<td class="table-data market-cap table-text">{{ a.marketcap }}</td>

								<td class="table-text">{{ a.prix }}</td>
								<td class="table-data">
									<button class="btn btn-outline btn_invest">
										<a href="{{ path('app_AddInvest', {'id': a.id}) }}">invest</a>
									</button>
								</td>

						{% endfor %}
						</tbody>
					</tbody>
				</table>
				<!-- 
																																																																																																																																																																																																																												        - #INSTRUCTION
																																																																																																																																																																																																																												      -->

				<section class="section instruction" aria-label="instruction" data-section>
					<div class="container">

						<h2 class="h2 section-title">How It Work</h2>

						<p class="section-text">
							Prosync is the future of trading.
						</p>

						<ul class="instruction-list">

							<li>
								<div class="instruction-card">

									<figure class="card-banner">
										<img src="{{ asset('images/front_office/instruction-1.png') }}" width="96" height="96" loading="lazy" alt="Step 1" class="img">
									</figure>

									<p class="card-subtitle">Step 1</p>

									<h3 class="h3 card-title">Sign Up</h3>

									<p class="card-text">
										Sign up, log in, and customize your profile according to your preferences.
									</p>

								</div>
							</li>

							<li>
								<div class="instruction-card">

									<figure class="card-banner">
										<img src="{{ asset('images/front_office/instruction-2.png') }}" width="96" height="96" loading="lazy" alt="Step 2" class="img">
									</figure>

									<p class="card-subtitle">Step 2</p>

									<h3 class="h3 card-title">Connect</h3>

									<p class="card-text">
										Invest, buy, and plan your future stock portfolio.
									</p>

								</div>
							</li>

							<li>
								<div class="instruction-card">

									<figure class="card-banner">
										<img src="{{ asset('images/front_office/instruction-3.png') }}" width="96" height="96" loading="lazy" alt="Step 3" class="img">
									</figure>

									<p class="card-subtitle">Step 3</p>

									<h3 class="h3 card-title">Start Trading</h3>

									<p class="card-text">
										Track and trade efficiently.
									</p>

								</div>
							</li>

							<li>
								<div class="instruction-card">

									<figure class="card-banner">
										<img src="{{ asset('images/front_office/instruction-4.png') }}" width="96" height="96" loading="lazy" alt="Step 4" class="img">
									</figure>

									<p class="card-subtitle">Step 4</p>

									<h3 class="h3 card-title">Earn Money</h3>

									<p class="card-text">
										Predictive algorithm to enhance your odds and margins.
									</p>

								</div>
							</li>

						</ul>

					</div>
				</section>
				<!--About-->
				<section class="section about" aria-label="about" data-section>
					<div class="container">

						<figure class="about-banner">
							<img src="{{ asset('images/front_office/about-banner.png') }}" width="748" height="436" loading="lazy" alt="about banner" class="w-100">
						</figure>

						<div class="about-content">

							<h2 class="h2 section-title">What Is Prosync</h2>

							<p class="section-text">
