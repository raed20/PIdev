{% block body %}
<!-- NAVIGATION -->
    <nav id="navigation">
      <!-- container -->
      <div class="container">
        <!-- responsive-nav -->
      </div>
      <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->

    <!-- SECTION -->
    <div class="section">
      <!-- container -->
      <div class="container">
        <!-- row -->
        <div class="row">
          <!-- Product main img -->
          <div class="col-md-5 col-md-push-1 ">
          <br>
    <br>
    <br>
    <br>
            <div id="product-main-img">
              <div class="product-preview">
                <img src="{{ asset('images/products/'~ product.image) }}" style="width: 400px; height: 400px;"/>
              </div>
            </div>
          </div>
<!-- /Product main img -->

<!-- Product thumb imgs -->
<div class="col-md-2 col-md-pull-5">
    <div id="product-imgs">
        <div class="product-preview">
        </div>
    </div>
</div>
<!-- /Product thumb imgs -->

<!-- Product details -->
<div class="col-md-5 ">
    <div class="product-details">
    <br>
    <br>
    <br>
    <br>
        <h2 class="product-name">{{ product.name }}</h2>
        <div>
            <h3 class="product-price">{{ product.price }}</h3>
            <span class="product-available">In Stock</span>
        </div>
        <p>{{ product.description }}</p>

    <form method="POST" action="{{ path('app_product_add_to_cart', {'id': product.id}) }}">
        <div class="add-to-cart">
            <div class="qty-label">
                Quantity
                <div class="input-number">
                    <input type="number" name="quantity" value="1" min="1" required>
                    <span class="qty-up">+</span>
                    <span class="qty-down">-</span>
                </div>
            </div>
            <br>
            <br>
            <button onclick="addToCart('{{ path('app_panier_add', {'id': product.id}) }}')" class="add-to-cart-btn">
                <i class="fa fa-shopping-cart"></i> add to cart
            </button>
        </div>

        <ul class="product-links">
            <li>Category:</li>
            <li><a href="#">{{ product.category }}</a></li>
        </ul>
    </div>
    </form>
</div>
<!-- /Product details -->


          <!-- Product tab -->
          <div class="col-md-12">
            <div id="product-tab">
              <!-- product tab nav -->
              <ul class="tab-nav">
                <li class="active">
                  <a data-toggle="tab">Details</a>
                </li>
              </ul>
              <!-- /product tab nav -->
              

              <!-- product tab content -->
              <div class="tab-content">
                <!-- tab1  -->
                <div id="tab1" class="tab-pane fade in active">
                    <div class="container">
                    <div class="row">
                    <div class="col-md-8 mx-auto">
                      <p>
                        "Welcome to our product page! Here, you'll find detailed information about {{product.name}}. 
                        Explore its features, specifications, and benefits to help you make an informed decision. 
                        If you have any questions or need assistance, feel free to reach out to our support team. 
                        Thank you for choosing PROSYNC for your shopping needs!"
                      </p>
                    </div>
                    </div>
                  </div>
                </div>
        </div>
        <!-- /row -->
      </div>
      <!-- /container -->
    </div>
    <!-- /SECTION -->

   
        </div>
        <!-- /row -->
      </div>
      <!-- /container -->
    </div>
    <!-- /Section -->
        <script>
        document.addEventListener("DOMContentLoaded", function() {
            const inputFields = document.querySelectorAll('input[name="quantity"]');

            inputFields.forEach(function(inputField) {
                const increaseBtn = inputField.nextElementSibling;
                const decreaseBtn = increaseBtn.nextElementSibling;

                increaseBtn.addEventListener('click', function() {
                    inputField.value = parseInt(inputField.value) + 1;
                });

                decreaseBtn.addEventListener('click', function() {
                    if (parseInt(inputField.value) > 1) {
                        inputField.value = parseInt(inputField.value) - 1;
                    }
                });
            });
        });
    </script>
{% endblock %}
