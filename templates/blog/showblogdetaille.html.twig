{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('styles_blog_single') }}
{% endblock %}
{% block javascripts %}
			{{ encore_entry_script_tags('translation') }}
		{% endblock %}


{% block body %}
 <!DOCTYPE html>
    <html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="author" content="Untree.co">
  <link rel="shortcut icon" href="favicon.png">

  <meta name="description" content="" />
  <meta name="keywords" content="bootstrap, bootstrap5" />

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">

  
  <link rel="stylesheet" href="fonts/icomoon/style.css">
  <link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

 
  <link rel="stylesheet" href="css/style.css">

  <script type="text/javascript" src="https://platform-api.sharethis.com/js/sharethis.js#property=65e0f279c6f7450019c08fdc&product=inline-share-buttons&source=platform" async="async"></script>


  <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</head>

<body>

  
  

  <div class="site-cover site-cover-sm same-height overlay single-page">
    <div class="container">
      <div class="row same-height justify-content-center">
        <div class="col-md-6">
          <div class="post-entry text-center">
            <h1 class="mb-4">{{blog.titre}}</h1>
            <div class="post-meta align-items-center text-center">
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="section">
    <div class="container">

      <div class="row blog-entries element-animate">

        <div class="col-md-12 col-lg-8 main-content">

          <div class="post-content-body">
           <p>{{blog.contenu}}</p>
          </div>


           <div id="google_translate_element"></div>

        <script>
            function googleTranslateElementInit() {
                new google.translate.TranslateElement({ autoDisplay: false }, 'google_translate_element');
            }
        </script>
  

          <div class="pt-5 comment-wrap">
    <h2>Comments</h2>
    {% for comment in comments %}
    <div class="card mb-3">
        <div class="card-body">
            <div class="media">
                <img src="images/person_1.jpg" alt="User Image" class="mr-3 rounded-circle" style="width: 60px;">
                <div class="media-body">
                    <h5 class="mt-0 mb-1">username</h5>
                    <p class="commentcontent">{{ comment.contenue }}</p>
                    <div class="d-flex justify-content-end align-items-center">
                        <form method="post" action="{{ path('delete_commentfront', {'id': comment.id}) }}" class="mr-2">
                            <button type="submit" class="btn btn-link text-danger">
                                <i class="bi bi-trash"></i> 
                            </button>
                        </form>
                        <a href="{{ path('edit_commentfront', {'id': comment.id}) }}" class="edit-action">
                            <i class="fas fa-pencil-alt edit-icon" style="color: blue;"></i> 
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

                </div>
                </li>
<div class="form-group">
                  
                <div class="form-group">
                  <a href="{{ path('add_commentfront', {'id': blog.id}) }}"  class="btn btn-dark">Post comment</a>
                </div>
              
                </li>
              </ul>
            <!-- END comment-list -->

          

        </div>
     
        <!-- END main-content -->

        

      
          
    <div class="sharethis-inline-share-buttons"></div>
      </div>
    </div>
  </section>


  

   
    <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/tiny-slider.js"></script>

    <script src="js/flatpickr.min.js"></script>


    <script src="js/aos.js"></script>
    <script src="js/glightbox.min.js"></script>
    <script src="js/navbar.js"></script>
    <script src="js/counter.js"></script>
    <script src="js/custom.js"></script>

    
  </body>
  </html>
{% endblock %}
