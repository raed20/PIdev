{% extends 'baseback.html.twig' %}



{% block body %}
{% block stylesheets %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

{% endblock %}

<body>
   

    <div class="container">
        <nav>
            <ul>
                <li><a href="#">ProSync</a></li>
                <li><a href="#">Blog List</a></li>
                <li><a href="{{ path('app_AddBlog') }}">Add Blog</a></li>

                
            </ul>
        </nav>

        <main>
         <h1>Blog List</h1>
            <table class="table align-middle mb-0 bg-white">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                {% for a in blog %}
                    <tr>
                        <td>{{ a.id }}</td>
                        <td>{{ a.titre }}</td>
                        <td>{{ a.description }}</td>
                        <td><a href="{{ path('app_editblog', {'id': a.id}) }}"><i class="fas fa-edit"></i> </a></td>
                        <td><a href="{{ path('app_delete', {'id': a.id}) }}"><i class="fas fa-trash-alt"></i> </a></td>

                    </tr>
                {% endfor %}
            </table>
        </main>
    </div>
</body>
</html>

{% endblock %}
