{% extends 'back_office/base_back.html.twig' %}



{% block body %}
{% block stylesheets %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        {{ encore_entry_link_tags('styles_back') }}
        {{ encore_entry_link_tags('styles_addblog') }}
{% endblock %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Blog</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  
</head>
<body>
    

    <div class="container">
        

        <main>
            <h1>Add Blog</h1>

            {{ form_start(f, {'attr': {'novalidate': 'novalidate'}}) }}

            <table class="addcontainer">
                <tr>
                    <td>{{ form_label(f.titre, "Title") }}</td>
                    <td>{{ form_widget(f.titre) }}</td>
                    <td class="error-message">{{ form_errors(f.titre) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(f.description, "Description") }}</td>
                    <td>{{ form_widget(f.description) }}</td>
                    <td class="error-message">{{ form_errors(f.description) }}</td>
                </tr>
                <tr class=dynamicbox>
                    <td>{{ form_label(f.contenu, "contenu") }}</td>
                    <td>{{ form_widget(f.contenu) }}</td>
                    <td class="error-message">{{ form_errors(f.contenu) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(f.categorie, "Category") }}</td>
                    <td>{{ form_widget(f.categorie) }}</td>
                    <td class="error-message">{{ form_errors(f.categorie) }}</td>
                </tr>
                <tr>
                        <td></td>
                        <td>
                            {# Add your button here #}
                            <button type="submit">Submit</button>
                        </td>
                        <td></td>
                    </tr>
               
            </table>

            {{ form_end(f) }}
        </main>
    </div>
</body>
</html>

{% endblock %}
