{% extends 'base_back.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('styles_back') }}
{% endblock %}
{% block body %}
<head>
  <title>List categories</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>  
</head>
<body>

  <div class="container mt-3">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h2>Category List</h2>
        <br>
        <br>
        <div class="mb-3 d-flex justify-content-between align-items-center">
          <form action="{{ path('app_category_all') }}" method="GET" class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search by name" aria-label="Search" name="search" style="width: 600px;">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
          <div>
            <a href="{{ path('app_category_add') }}" class="btn btn-success">Add Category</a>
          </div>
        </div>          
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Reference</th>
              <th>Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {% for category in categories %}
            <tr>
              <td>{{ category.id }}</td>
              <td>{{ category.name }}</td>
              <td>
                <div style="display: flex;">
                  <form action="{{ path('app_edit_category', {'ref': category.id}) }}" method="post" style="margin-right: 5px;">
                    <button type="submit" class="btn btn-primary">Edit</button>
                  </form>
                  <form action="{{ path('app_delete_category', {'ref': category.id}) }}" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
{% endblock %}
