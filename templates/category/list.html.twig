{% extends 'base_back.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('styles_back') }}
{% endblock %}
{% block body %}
  <div class="container mt-3">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <h2 class="text-center mb-4 mt-3">Category List</h2>
        <div class="text-right mb-3"> <!-- Align to the right -->
          <a href="{{ path('app_category_add') }}" class="btn btn-success">Add Category</a>
        </div>
        <br> <!-- Move the <br> below the button -->
        <br>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Reference</th>
              <th>Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            {% for category in categories %}
            <tr>
              <td>{{ category.id }}</td>
              <td>{{ category.name }}</td>
              <td>
                <div style="display: flex;">
                  <form action="{{ path('app_edit_category', {'ref': category.id}) }}" method="post" style="margin-right: 5px;">
                    <button type="submit" class="btn btn-primary">Edit</button>
                  </form>
                  <form action="{{ path('app_delete_category', {'ref': category.id}) }}" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
