{% extends 'backend/baseback.html.twig' %}

{% block title %}Reclamations{% endblock %}

{% block content %}
    <main>
        <section class="section-md bg-default decor-text" data-content="Review">

    <div class="container">
        <h4 class="heading-decorated">Mes reclamations</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Objet</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.DateRec ? reclamation.DateRec|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.Objet }}</td>
                <td>{{ reclamation.Description }}</td>
                <td>{{ reclamation.Etat ? 'Traitée' : 'Non Traitée' }}</td>
                <td>
                    <a class="btn btn-outline-primary" href="{{ path('app_reclamation_showback', {'id': reclamation.id}) }}">Show</a>
                    {% if reclamation.Etat %}
                    <a class="btn btn-outline-primary" href="{{ path('app_reponse_show', {'id': reclamation.Reponse.id}) }}">Reponse</a>
                    {% endif %}
                    {% if not reclamation.Etat %}
                    <a class="btn btn-outline-primary" href="{{ path('app_reponse_new', {'idReclamation': reclamation.id}) }}">Repondre</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
</section>

</main>
{% endblock %}
